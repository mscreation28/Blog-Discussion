@model IEnumerable<BlogDiscussion2.Models.Blog>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header d-flex">
                    @item.title
                    @*@item.users.Id*@
                    <div class="ml-auto">
                        <button class="btn btn-outline-danger btn-sm rounded" id="btnLike" onclick="likeBlog('@Url.Action("LikeBlog","Blogs",new { id=item.id}, Context.Request.Scheme)')">
                        <i class="far fa-heart"></i> 
                            <span id="likeCount">@item.likes</span>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-text">
                        @Html.Raw(item.body)
                    </div>
                </div>
                <div class="card-footer d-flex">
                    <a asp-action="Details" asp-controller="Blogs" asp-route-id="@item.id" class="btn btn-outline-success btn-sm rounded">Read More</a>
                </div>
            </div>
        </div>
    }
</div>
